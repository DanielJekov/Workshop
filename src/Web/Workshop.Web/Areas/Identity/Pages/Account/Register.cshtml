@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 card text-center border-blue" style="background-color: transparent">
        <div class="row h4 mt-3  text-center text-dark">
            <div class="col-6">
                <a class="text-chocolate" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
            </div>
            <div class="col-6 ">
                <a class="text-chocolate" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
            </div>
        </div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-left">
                <label class="text-green" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control text-warning border-blue" style="background-color: transparent"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label class="text-green" asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control  text-warning border-blue" style="background-color: transparent"/>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label class="text-green" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control text-warning border-blue" style="background-color: transparent"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label class="text-green" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control text-warning border-blue" style="background-color: transparent"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Регистрация</button>
            <br>
            <br>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
