@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form id="profile-form" enctype="multipart/form-data" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="text-green" asp-for="Username"></label>
                <input asp-for="Username" class="form-control text-warning border-blue" style="background-color: transparent" />
            </div>
            <div class="form-group">
                <label class="text-green" asp-for="Input.AvatarFile"></label>
                <input asp-for="Input.AvatarFile" class="form-control  text-warning border-0" style="background-color: transparent" />
                <span asp-validation-for="Input.AvatarFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-green" asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control text-warning border-blue" style="background-color: transparent" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-success">Запази</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}