@model Workshop.Web.ViewModels.Topics.TopicInputModel

<div class="card-header" style="background-color: rgba(255,255,255,0.07);">
    <div class="container">
        <form class="form-group" asp-area="Learning" asp-controller="Topics" asp-action="Create" method="post">
            <div class="row">
                <label class="text-blue h5 d-xl-block" asp-for="Name"> </label>
                <input asp-for="Name" class="form-control" type="text"  value="" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label class="text-blue h5" asp-for="YoutubeLink"> </label>
                <input asp-for="YoutubeLink" class="form-control" type="text"  value="" />
                <span asp-validation-for="YoutubeLink" class="text-danger"></span>

                <label class="text-blue h5 " asp-for="Note"> </label>
                <textarea asp-for="Note" class="form-control" placeholder="Note..." rows="3"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>

                <input type="hidden" id="courseId" name="courseId" value="" />
                <button class="btn btn-success mt-3">Create</button>
            </div>
        </form>
    </div>
</div>



